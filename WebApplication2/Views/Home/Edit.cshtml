@model WebApplication2.Models.FileEntity

@{
    ViewBag.Title = "Edit "+Model.Name;
}

<h2>Edit</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.User)
    @Html.HiddenFor(model => model.Path)
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.DateTime)
    @Html.HiddenFor(model => model.UrlPath)
    @Html.HiddenFor(model => model.MimeType)
    @Html.HiddenFor(model => model.DownloadLink)
    <div class="form-horizontal" >

        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "form-control" })

                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DownloadLink, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control" id="disabledInput" type="text" value="https://localhost:44300/Download/@Model.DownloadLink" disabled="">
                @Html.ValidationMessageFor(model => model.DownloadLink)
               
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Description, htmlAttributes: new { @class = "form-control", style = "height:300px" })
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "UserFiles","Account",null,null)
</div>
